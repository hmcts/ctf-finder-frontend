{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "template.njk" %}

{% block pageTitle %}
  {{ title }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row court-tribunal-details">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-l">
      {{ question }}
    </h1>
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-grid-row">
        <div>
          <p class="govuk-body-m">
            {{ hint }}
          </p>
        </div>
        {% if results.slug %}
          <div class="search-result" id="search-result">
            <h2 class="govuk-heading-m">
              <a class="govuk-link" href="/courts/{{ results.slug }}">{{ results.courtName }}</a>
            </h2>
          </div>
        {% endif %}
      </div>
     <div class="govuk-grid-row">
          <p class="govuk-body-m">
            {{ regionStatement }}
          </p>
     </div>
    </div>
    {% if onlineText %}
    <div class="govuk-grid-column-one-third side-content">
      <div id="areas-of-law">
          <h3 class="govuk-heading-m">
            {{ applyOnlineHeading }}
          </h3>
          <p class="govuk-body-m">
          <a class="govuk-link" href="{{ onlineUrl }}"> {{ onlineText }} </a>
          </p>
      </div>
    </div>
    {% endif %}
  </div>
</div>

{% endblock %}
